@model List<MvcRazorViews.ViewModels.SiteViewModel>
@{
    ViewData["Title"] = "Lista";
}


@if(Model.Count == 0) 
{
    <p>Nenhuma loja ou kiosque cadastrado</p>
    <a href="#">Cadastre agora</a>
}
else
{
    <p>@Model.Count lojas e kiosques cadastrados</p>

    @foreach(var comercio in Model)  {
       
        <p>@comercio.Id</p>
        <p>@comercio.Nome</p>
        <p>@comercio.Descricao</p>
        <p>@comercio.Tipo</p>
        <p>@comercio.Email</p>
        <hr>
    }
}